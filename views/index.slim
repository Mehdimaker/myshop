  #welcolm
    button.btn.btn-primary data-target="#signin" data-toggle="modal" type="button" Sign in
    button.btn.btn-default data-target="#signup" data-toggle="modal" type="button" Sign up
    #signin.modal.fade aria-labelledby="myModalLabel" role="dialog" tabindex="-1" 
      .modal-dialog.modal-sm role="document" 
        .modal-content
          form action="/signin" method="post" 
            .modal-header
              h4 Sign in
            .modal-body
              .input-group
                span.input-group-addon
                  span class="glyphicon glyphicon-user" aria-hidden="true"
                input type="text" class="form-control" placeholder="Username" name="name"
              .input-group
                span.input-group-addon
                  span class="glyphicon glyphicon-lock" aria-hidden="true"
                input type="text" class="form-control" placeholder="Password"name="password"
            .modal-footer
              button.btn.btn-default type="button" data-dismiss="modal" aria-hidden="true" Cancel
              button.btn.btn-success type="submit" Confirm

    #signup.modal.fade aria-labelledby="myModalLabel" role="dialog" tabindex="-1" 
      .modal-dialog.modal-sm role="document" 
        .modal-content
          form action="/signup" method="post" 
            .modal-header
              h4 Sign up
            .modal-body
              .input-group
                span.input-group-addon
                  span class="glyphicon glyphicon-user" aria-hidden="true"
                input type="text" class="form-control" placeholder="Your username" name="name"
              .input-group
                span.input-group-addon
                  span class="glyphicon glyphicon-lock" aria-hidden="true"
                input type="text" class="form-control" placeholder="Your password"name="password"
              .input-group
                span.input-group-addon
                  span class="glyphicon glyphicon-lock" aria-hidden="true"

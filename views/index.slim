main.row  
  #list.col-xs-12
    h3 Products
    table.table
      tr
        th Id
        th Name
        th Price
        th Stock
        th shipping cost
      - @products.each do |product|
        tr 
          td = product.id.to_s 
          td = product.name 
          td = "#{(product.price.to_f)/100}$"      
          td = product.stock.to_s
          td = "#{(product.shipping_cost.to_f)/100}$"    

  #list.col-xs-12
    h3 Cart_products
    table.table
      tr
        th Id
        th Product id
        th Cart id
        th Quantity
      - @cart_products.each do |cart_product|
        tr 
          td = cart_product.id.to_s 
          td = cart_product.product_id.to_s 
          td = cart_product.cart_id.to_s  
          td = cart_product.quantity.to_s

  #list.col-xs-12
    h3 Carts
    table.table
      tr
        th Id
        th User_id
        th Status
        th Created at
      - @carts.each do |cart|
        tr 
          td = cart.id.to_s 
          td = cart.user_id.to_s
          td = cart.status  
          td = cart.created_at

  #list.col-xs-12
    h3 Users
    table.table
      tr
        th Id
        th Name
        th Password
        th Role
      - @users.each do |user|
        tr 
          td = user.id.to_s 
          td = user.name 
          td = user.password_digest
          td = user.role
        